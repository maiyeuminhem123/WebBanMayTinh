@model IEnumerable<WebBanMayTinh.Models.Category>

<style>
    .sidebar-category-wrapper {
        min-width: 220px; /* Slightly wider for better text fit */
        background-color: #fff; /* White background for clarity */
        border-radius: 8px; /* Softer corners */
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        overflow: visible;
        padding: 10px 0; /* Add padding for better spacing */
    }

    .category-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

        .category-list li {
            border-top: 1px solid #e5e5e5; /* Slightly darker border */
        }

            .category-list li:first-child {
                border-top: none;
            }

    .category-item {
        display: flex;
        align-items: center;
        padding: 12px 20px; /* More padding for comfort */
        text-decoration: none;
        color: #2c3e50; /* Darker, modern color */
        transition: all 0.3s ease; /* Smooth transition for all changes */
        font-weight: 500;
        font-size: 15px; /* Slightly larger text */
        line-height: 1.5; /* Better line spacing */
        white-space: normal; /* Allow text wrapping */
        overflow: visible; /* Ensure full text visibility */
        text-overflow: unset;
    }

        .category-item:hover {
            background-color: #f8f9fa; /* Lighter hover background */
            color: #c0392b; /* Richer red for hover */
            transform: translateX(5px); /* Subtle shift on hover */
        }

        .category-item i {
            margin-right: 12px; /* More space for icon */
            width: 24px; /* Slightly larger icon area */
            text-align: center;
            color: #7f8c8d; /* Neutral icon color */
            transition: color 0.3s ease;
        }

        .category-item:hover i {
            color: #c0392b; /* Icon matches text color on hover */
        }
</style>

<div class="sidebar-category-wrapper">
    <ul class="category-list">
        @foreach (var category in Model)
        {
            <li>
                <a href="@Url.Action("Index", "Home", new { searchQuery = category.Name })" class="category-item">
                    <i class="fas fa-laptop"></i>
                    @category.Name
                </a>
            </li>
        }
    </ul>
</div>
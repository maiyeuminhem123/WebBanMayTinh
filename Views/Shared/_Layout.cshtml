    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebBanMayTinh.styles.css" asp-append-version="true" />
    <style>
        /* Mega Dropdown Menu Styles */
        .mega-dropdown {
            position: static !important;
        }

        .navbar-gradient {
            background: linear-gradient(#9f0404, #b20404) !important;
        }

        .mega-dropdown-menu {
            width: 100%;
            border-radius: 0;
            background-color: #fff;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.175);
            border-top: 3px solid #ff4d4d;
            padding: 15px;
            transition: opacity 0.3s ease, transform 0.3s ease;
        }

        .mega-dropdown-menu.show {
            opacity: 1;
            transform: translateY(0);
        }

        .mega-dropdown-menu:not(.show) {
            opacity: 0;
            transform: translateY(-10px);
        }

        .mega-dropdown-menu .dropdown-header {
            color: #ff4d4d;
            font-size: 16px;
            font-weight: bold;
            border-bottom: 1px solid #eee;
            padding-bottom: 8px;
            margin-bottom: 8px;
        }

        .mega-dropdown-menu .dropdown-menu {
            padding: 0;
            margin: 0;
            display: flex;
            flex-wrap: wrap;
            justify-content: flex-start;
        }

        .mega-dropdown-menu .dropdown-menu li {
            margin-right: 5px;
            margin-bottom: 5px;
        }

        .mega-dropdown-menu .dropdown-menu li:last-child {
            margin-right: 0;
        }

        .mega-dropdown-menu .dropdown-item {
            padding: 5px 10px;
            color: #333;
            font-size: 14px;
            transition: all 0.2s;
        }

        .mega-dropdown-menu .dropdown-item:hover {
            background-color: #f8f9fa;
            color: #ff4d4d;
            padding-left: 15px;
        }

        .mega-dropdown-menu .dropdown-divider {
            border-color: #eee;
            margin: 10px 0;
        }

        .dropdown-promo {
            max-width: 250px;
        }

        .navbar .nav-item:hover .nav-link {
            color: #fff;
            text-shadow: 0 0 5px rgba(255, 255, 255, 0.5);
        }

        .navbar .nav-link {
            position: relative;
            transition: all 0.3s ease;
        }

        .navbar .nav-link:after {
            content: '';
            position: absolute;
            width: 0;
            height: 2px;
            background: #fff;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            transition: width 0.3s ease;
        }

        .navbar .nav-link:hover:after {
            width: 70%;
        }

        /* Admin Sidebar Styles */
        .admin-sidebar {
            width: 250px;
            background: linear-gradient(180deg, #2c3238 0%, #343a40 100%);
            min-height: calc(100vh - 116px);
            position: fixed;
            top: 116px;
            left: 0;
            padding: 20px 0;
            overflow-y: auto;
            box-shadow: 3px 0 10px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease;
            z-index: 1020;
        }

        .admin-sidebar .sidebar-menu {
            padding: 0 10px;
            list-style: none;
        }

        .admin-sidebar .sidebar-item {
            display: flex;
            align-items: center;
            padding: 12px 20px;
            margin: 5px 10px;
            border-radius: 8px;
            color: #e0e0e0;
            text-decoration: none;
            font-size: 15px;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .admin-sidebar .sidebar-item:hover {
            background-color: rgba(255, 255, 255, 0.1);
            color: #ffffff;
            transform: translateX(5px);
        }

        .admin-sidebar .sidebar-item.active {
            background-color: #ff4d4d;
            color: #ffffff;
            box-shadow: 0 2px 5px rgba(255, 77, 77, 0.3);
        }

        .admin-sidebar .sidebar-item i {
            font-size: 18px;
            width: 24px;
            margin-right: 12px;
            text-align: center;
        }

        .admin-sidebar .sidebar-item span {
            flex-grow: 1;
        }

        /* Service Sidebar Styles */
        .service-sidebar {
            width: 250px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            padding: 20px;
            position: fixed;
            top: 116px;
            left: 0;
            height: calc(100vh - 116px);
            overflow-y: auto;
            z-index: 1000;
            transition: transform 0.3s ease;
        }

        .service-sidebar .sidebar-title {
            color: #e60000;
            font-size: 18px;
            margin-bottom: 15px;
            padding-bottom: 10px;
            border-bottom: 1px solid #eee;
        }

        .service-sidebar .sidebar-menu {
            list-style: none;
            padding: 0;
        }

        .service-sidebar .sidebar-menu li {
            margin-bottom: 10px;
        }

        .service-sidebar .sidebar-menu li a {
            color: #333;
            text-decoration: none;
            display: block;
            padding: 8px 10px;
            transition: all 0.3s ease;
        }

        .service-sidebar .sidebar-menu li a:hover {
            background-color: #f8f9fa;
            color: #e60000;
        }

        .service-sidebar .sidebar-menu li.active a {
            background-color: #f0f0f0;
            color: #e60000;
            border-left: 3px solid #e60000;
        }

        /* Sidebar Toggle */
        .sidebar-toggle {
            display: none;
            position: fixed;
            top: 130px;
            left: 10px;
            z-index: 1040;
            cursor: pointer;
            font-size: 1.2rem;
            padding: 8px 12px;
            color: #ffffff;
            background-color: #e60000;
            border-radius: 50%;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
            transition: background-color 0.3s ease;
        }

        .sidebar-toggle:hover {
            background-color: #cc0000;
        }
        /* Hero Carousel */
        .hero-carousel {
            margin: 30px 0;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: var(--shadow-hover);
        }

        .carousel-item img {
            height: 450px;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .carousel-item:hover img {
            transform: scale(1.05);
        }

        .carousel-caption {
            background: linear-gradient(transparent, rgba(0,0,0,0.7));
            border-radius: 15px;
            padding: 30px;
        }

            .carousel-caption h2 {
                font-size: 2.5rem;
                font-weight: 700;
                text-shadow: 2px 2px 4px rgba(0,0,0,0.8);
                margin-bottom: 15px;
            }

            .carousel-caption p {
                font-size: 1.2rem;
                text-shadow: 1px 1px 2px rgba(0,0,0,0.8);
            }

        .btn-primary-custom {
            background: var(--primary-gradient);
            border: none;
            border-radius: 25px;
            padding: 12px 30px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: var(--transition);
            box-shadow: 0 4px 15px rgba(178, 4, 4, 0.3);
        }

            .btn-primary-custom:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(178, 4, 4, 0.4);
            }

        /* Advertisement Banners */
        .ad-banner {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 40px;
            border-radius: 20px;
            margin: 30px 0;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

            .ad-banner::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
                animation: shine 3s infinite;
            }

        @@keyframes shine {
            0% {
                left: -100%;
            }

            100% {
                left: 100%;
            }
        }

        .ad-banner h2 {
            font-size: 2.2rem;
            font-weight: 700;
            margin-bottom: 15px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }

        .ad-banner-small {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            color: white;
            padding: 25px;
            border-radius: 15px;
            margin: 20px 0;
            text-align: center;
            transition: var(--transition);
            box-shadow: var(--shadow);
        }

            .ad-banner-small:hover {
                transform: translateY(-5px);
                box-shadow: var(--shadow-hover);
            }

        .promotion-badge {
            background: var(--accent-color);
            color: white;
            padding: 8px 15px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            position: absolute;
            top: 15px;
            right: 15px;
            animation: bounce 2s infinite;
        }

        @@keyframes bounce {
            0%, 20%, 50%, 80%, 100% {
                transform: translateY(0);
            }

            40% {
                transform: translateY(-10px);
            }

            60% {
                transform: translateY(-5px);
            }
        }

        /* Animations */
        .fade-in-up {
            animation: fadeInUp 0.8s ease-out;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(50px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Loading Animation */
        .loading-spinner {
            display: inline-block;
            width: 20px;
            height: 20px;
            border: 3px solid rgba(255,255,255,.3);
            border-radius: 50%;
            border-top-color: #fff;
            animation: spin 1s ease-in-out infinite;
        }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        /* Responsive Design */
        @@media (max-width: 992px) {
            .mega-dropdown-menu {
                padding: 15px;
            }

            .carousel-caption h2 {
                font-size: 1.8rem;
            }

            .ad-banner {
                padding: 25px;
            }

                .ad-banner h2 {
                    font-size: 1.6rem;
                }
        }

        @@media (max-width: 768px) {
            .search-container {
                margin: 15px 0;
            }

            .secondary-nav .container {
                flex-direction: column;
                gap: 10px;
            }

            .secondary-nav .nav-item {
                text-align: center;
                padding: 10px;
            }

                .secondary-nav .nav-item:after {
                    display: none;
                }

            .hero-carousel {
                margin: 20px 0;
            }

            .carousel-item img {
                height: 250px;
            }

            .carousel-caption {
                padding: 15px;
            }

                .carousel-caption h2 {
                    font-size: 1.4rem;
                }

                .carousel-caption p {
                    font-size: 0.9rem;
                }

            .ad-banner {
                padding: 20px;
                margin: 20px 0;
            }

                .ad-banner h2 {
                    font-size: 1.4rem;
                }
        }
        /* Smooth Scrolling */
        html {
            scroll-behavior: smooth;
        }

        /* Custom Scrollbar */
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: #f1f1f1;
        }

        ::-webkit-scrollbar-thumb {
            background: var(--primary-gradient);
            border-radius: 4px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: var(--secondary-color);
                /* Content Wrapper */
        .content-wrapper {
            margin-left: 250px;
            padding: 20px;
            min-height: calc(100vh - 116px);
            transition: margin-left 0.3s ease;
        }

        /* Ensure content wrapper respects sidebar in all cases */
        .admin-sidebar + .content-wrapper {
            margin-left: 250px !important;
        }

        .content-wrapper form {
            margin-left: 10px;
            width: calc(100% - 10px);
        }

        /* No Sidebar */
        .no-sidebar .content-wrapper {
            margin-left: 0;
        }

        /* Responsive without media */
        .mobile-view .admin-sidebar,
        .mobile-view .service-sidebar {
            width: 250px;
            transform: translateX(-250px);
        }

        .mobile-view .admin-sidebar.show,
        .mobile-view .service-sidebar.show {
            transform: translateX(0);
        }

        .mobile-view .content-wrapper {
            margin-left: 0;
        }

        .mobile-view .content-wrapper.shifted {
            margin-left: 250px;
        }

        .mobile-view .sidebar-toggle {
            display: block;
        }

        /* Prevent content jumping */
        body {
            overflow-x: hidden;


        }
    </style>
    @RenderSection("Styles", required: false)
</head>

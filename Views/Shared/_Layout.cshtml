    <script>
        $(document).ready(function () {
            // Mega Dropdown
            const dropdown = $('#categoryDropdownContainer');
            const dropdownMenu = dropdown.find('.dropdown-menu');
            const dropdownToggle = dropdown.find('.dropdown-toggle');
            let dropdownTimeout;
            let isDropdownOpen = false;

            const openDropdown = () => {
                clearTimeout(dropdownTimeout);
                if (!isDropdownOpen) {
                    dropdownMenu.addClass('show');
                    dropdownToggle.attr('aria-expanded', 'true');
                    isDropdownOpen = true;
                }
            };

            const closeDropdown = () => {
                clearTimeout(dropdownTimeout);
                dropdownTimeout = setTimeout(() => {
                    if (isDropdownOpen) {
                        dropdownMenu.removeClass('show');
                        dropdownToggle.attr('aria-expanded', 'false');
                        isDropdownOpen = false;
                    }
                }, 200);
            };

            dropdown.on('mouseenter', openDropdown);
            dropdown.on('mouseleave', closeDropdown);
            dropdownMenu.on('mouseenter', () => clearTimeout(dropdownTimeout));
            dropdownMenu.on('mouseleave', closeDropdown);
            dropdownMenu.on('click', function (e) {
                e.stopPropagation();
            });

            dropdownToggle.on('click', function () {
                isDropdownOpen = dropdownToggle.attr('aria-expanded') === 'true';
                if (isDropdownOpen) {
                    clearTimeout(dropdownTimeout);
                } else {
                    closeDropdown();
                }
            });

            $(document).on('click', function (e) {
                if (isDropdownOpen && !dropdown[0].contains(e.target)) {
                    closeDropdown();
                }
            });

            $('.dropdown-item').on('mouseenter', function () {
                $(this).css('transition', 'all 0.2s ease');
            });

            // Sidebar Toggle Logic
            function toggleSidebar() {
                $('.admin-sidebar, .service-sidebar').toggleClass('show');
                $('.content-wrapper').toggleClass('shifted');
            }

            // Responsive Sidebar Behavior
            function updateResponsive() {
                if ($(window).width() <= 768) {
                    $('body').addClass('mobile-view');
                    $('.admin-sidebar, .service-sidebar').removeClass('show');
                    $('.content-wrapper').removeClass('shifted');
                } else {
                    $('body').removeClass('mobile-view');
                    $('.admin-sidebar, .service-sidebar').removeClass('show');
                    $('.content-wrapper').removeClass('shifted');
                    // Force margin-left for admin area in desktop view
                    if ($('.admin-sidebar').length) {
                        $('.content-wrapper').css('margin-left', '250px');
                    }
                }
            }

            // Initial call
            updateResponsive();
            $(window).on('resize', updateResponsive);

            // Sidebar toggle button
            $('.sidebar-toggle').on('click', function (e) {
                e.stopPropagation();
                toggleSidebar();
            });

            // Close sidebar when clicking outside in mobile view
            $(document).on('click', function (e) {
                if ($(window).width() <= 768 &&
                    ($('.admin-sidebar').hasClass('show') || $('.service-sidebar').hasClass('show')) &&
                    !$('.admin-sidebar').is(e.target) &&
                    !$('.service-sidebar').is(e.target) &&
                    $('.admin-sidebar').has(e.target).length === 0 &&
                    $('.service-sidebar').has(e.target).length === 0 &&
                    !$('.sidebar-toggle').is(e.target)) {
                    $('.admin-sidebar, .service-sidebar').removeClass('show');
                    $('.content-wrapper').removeClass('shifted');
                }
            });

            // Set active sidebar item based on current URL
            $('.admin-sidebar .sidebar-item').each(function () {
                const href = $(this).attr('href');
                if (window.location.pathname === href) {
                    $(this).addClass('active');
                } else {
                    $(this).removeClass('active');
                }
            });

            // Handle dynamic content loading and prevent overlap
            const contentWrapper = document.querySelector('.content-wrapper');
            if (contentWrapper) {
                const resizeObserver = new ResizeObserver(() => {
                    if ($(window).width() > 768 && !$('body').hasClass('mobile-view')) {
                        if ($('.admin-sidebar').length) {
                            $(contentWrapper).css('margin-left', '250px');
                        } else {
                            $(contentWrapper).css('margin-left', '0');
                        }
                    } else if ($('.admin-sidebar').hasClass('show')) {
                        $(contentWrapper).css('margin-left', '250px');
                    } else {
                        $(contentWrapper).css('margin-left', '0');
                    }
                });
                resizeObserver.observe(contentWrapper);
            }
        });
    </script>

    }

    .service-banner {
        width: 100%;
        border-radius: 5px;
        margin-bottom: 20px;
        overflow: hidden;
    }

        .service-banner img {
            width: 100%;
            height: auto;
            display: block;
        }

    .service-description, .guarantee-text {
        margin-bottom: 25px;
        line-height: 1.6;
        color: #333;
        text-align: justify;
    }

    .service-list-title, .contact-info-title, .work-hours-title, .response-time-title {
        font-size: 20px;
        margin-bottom: 15px;
        color: #333;
        text-align: center;
    }

    .service-list, .contact-list, .work-hours-list, .response-time-list {
        list-style-type: none;
        margin-bottom: 30px;
        padding: 0;
    }

        .service-list li, .contact-list li, .work-hours-list li, .response-time-list li {
            padding: 10px 0 10px 25px;
            position: relative;
            border-bottom: 1px solid #f0f0f0;
        }

            .service-list li:before, .contact-list li:before, .work-hours-list li:before, .response-time-list li:before {
                content: "•";
                color: #e60000;
                font-weight: bold;

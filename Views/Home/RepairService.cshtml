<style>
    body {
        background-color: #f5f5f5;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 15px;
    }

    .main-content {
        display: flex;
        justify-content: center; /* Căn giữa nội dung */
        max-width: 900px; /* Giảm chiều rộng để tránh bị che bởi sidebar */
        margin: 0 auto;
        padding: 0 15px;
    }

    .content {
        width: 100%; /* Chiếm toàn bộ chiều rộng của .main-content */
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

    .page-title {
        font-size: 24px;
        margin-bottom: 20px;
        color: #333;
        padding-bottom: 10px;
        border-bottom: 1px solid #eee;

                left: 0;
            }

            .contact-list li a {
                color: #0366d6;
                text-decoration: none;
            }

                .contact-list li a:hover {
                    text-decoration: underline;
                }

    .service-cta {
        text-align: center;
        margin: 30px 0;
    }

    .cta-button {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 12px 30px;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        font-size: 18px;
        font-weight: bold;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

        .cta-button:hover {
            background-color: #0056b3;
        }

    .cta-hand {
        font-size: 24px;
        margin-right: 10px;
    }

    .guarantee-text {
        padding: 15px;
        background-color: #f8f9fa;
        border-radius: 5px;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .main-content

    {
        max-width: 100%;
        padding: 0 10px;
    }

    .content {
        padding: 15px;
    }

    .page-title {
        font-size: 20px;
    }

    .service-list-title, .contact-info-title, .work-hours-title, .response-time-title {
        font-size: 18px;
    }

    .cta-button {
        padding: 10px 25px;
        font-size: 16px;
    }

    .cta-hand {
        font-size: 20px;
    }

    }

    @@media (max-width: 576px) {
        .page-title

    {
        font-size: 18px;
    }

    .service-list-title, .contact-info-title, .work-hours-title, .response-time-title {
        font-size: 16px;
    }

    .service-list li, .contact-list li, .work-hours-list li, .response-time-list li {

            overflow-y: auto;
            z-index: 1000;
        }

        .sidebar-title {
            color: #e60000;
            font-size: 18px;
            margin-bottom: 15px;
            padding-bottom: 10px;
            border-bottom: 1px solid #eee;
        }

        .sidebar-menu {
            list-style: none;
            padding: 0;
        }


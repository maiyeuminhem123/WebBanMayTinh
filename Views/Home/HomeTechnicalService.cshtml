    }

    .cta-button {
        padding: 10px 25px;
        font-size: 16px;
    }

    .cta-hand {
        font-size: 20px;
    }

    }

    @@media (max-width: 576px) {
        .page-title

    {
        font-size: 18px;
    }

    .service-list-title, .contact-info-title, .work-hours-title, .response-time-title {
        font-size: 16px;
    }

    .service-list li, .contact-list li, .work-hours-list li, .response-time-list li {
        padding: 6px 0 6px 20px;
        font-size: 14px;
    }

    .cta-button {
        padding: 8px 20px;

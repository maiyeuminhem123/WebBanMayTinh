@page
@model LoginModel
@{
	ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewData["Title"] - TTP Computer</title>
	<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
	<style>
		body {
			background-color: #f8f9fa;
			font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
		}

		.login-container {
			background-color: white;
			border-radius: 10px;
			box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
			padding: 30px;
			margin-top: 40px;
			margin-bottom: 40px;
		}

		.form-label {
			font-weight: 500;
		}

		.form-control:focus {
			box-shadow: 0 0 0 0.2rem rgba(229, 44, 68, 0.25);
			border-color: #9f0404;
		}

		.btn-login {
			background-color: #9f0404;
			border-color: #9f0404;
			color: white;
			width: 100%;
			padding: 12px;
			font-weight: 600;
			margin-top: 10px;
		}

			.btn-login:hover {
				background-color: #b20404;
				border-color: #b20404;
				color: white;
			}

		.btn-google {
			background-color: #db4a39;
			color: white;
		}

		.btn-facebook {
			background-color: #3b5998;
			color: white;
			border: none;
		}

		.social-login {
			margin-top: 30px;
			text-align: center;
		}

		.register-link {
			text-align: center;
			margin-top: 20px;
		}

		.forgot-password {
			text-align: right;
			font-size: 0.9rem;
			margin-top: 0.5rem;
		}
	</style>
</head>
<body>
	<div class="d-flex justify-content-center align-items-center min-vh-100">
		<div class="container">
			<div class="row">
				<div class="col-md-6 col-lg-5 mx-auto login-container">
					<h2 class="text-center mb-4">Welcome Back</h2>
					<p class="text-center text-muted mb-4">Sign in to TTP Computer account</p>

					<form method="post">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>

						<div class="mb-3">
							<label asp-for="Input.Email" class="form-label"></label>
							<input asp-for="Input.Email" class="form-control" />
							<span asp-validation-for="Input.Email" class="text-danger"></span>
						</div>

						<div class="mb-3">
							<label asp-for="Input.Password" class="form-label"></label>
							<input asp-for="Input.Password" class="form-control" />
							<span asp-validation-for="Input.Password" class="text-danger"></span>
							<div class="forgot-password">
								<a asp-page="./ForgotPassword">Forgot password?</a>
							</div>
						</div>

						<div class="mb-3 form-check">
							<input asp-for="Input.RememberMe" class="form-check-input" />
							<label asp-for="Input.RememberMe" class="form-check-label"></label>
						</div>

						<button type="submit" class="btn btn-login">LOG IN</button>
					</form>

					@if ((Model.ExternalLogins?.Count ?? 0) > 0)
					{
						<div class="social-login">
							<p class="text-center">Or sign in with</p>
							<form asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
								<div class="row">
									@foreach (var provider in Model.ExternalLogins!)
									{
										<div class="col-6 mb-2">
											<button type="submit" class="btn w-100
                                @(provider.Name == "Google" ? "btn-google" :
                                  provider.Name == "Facebook" ? "btn-facebook" : "btn-secondary")"
													name="provider" value="@provider.Name">
												<i class="fab @(provider.Name == "Google" ? "fa-google" : "fa-facebook-f") me-2"></i>
												@provider.Name
											</button>
										</div>
									}
								</div>
							</form>
						</div>
					}

					<div class="register-link">
						<p>Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register now</a></p>
					</div>
				</div>
			</div>
		</div>
	</div>

	<partial name="_ValidationScriptsPartial" />
	<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>

</html>

@model WebBanMayTinh.Models.Category

@{
    ViewData["Title"] = "Tạo danh mục con";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-dark text-white bg-success d-flex align-items-center">
                    <i class="fas fa-folder-plus fa-lg me-2"></i>
                    <h5 class="mb-0">Tạo danh mục con</h5>
                </div>
                <div class="card-body p-4">
                    <h5 class="mb-4 text-muted">Danh mục cha: <strong>@ViewBag.ParentName</strong></h5>
                    <form asp-area="Admin" asp-controller="Category" asp-action="CreateSub" method="post">
                        @* Ẩn ID của danh mục cha *@
                        <input type="hidden" asp-for="ParentId" />

                        <div class="form-floating mb-4">
                            <input asp-for="Name" class="form-control" placeholder="Nhập tên danh mục con" />
                            <label asp-for="Name"><i class="fas fa-tag me-1"></i>Tên danh mục con</label>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <textarea asp-for="Description" class="form-control" placeholder="Mô tả ngắn" style="height: 120px;"></textarea>
                            <label asp-for="Description"><i class="fas fa-align-left me-1"></i>Mô tả</label>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-success me-2 px-4 py-2 shadow-sm" title="Tạo danh mục con">
                                <i class="fas fa-save me-1"></i>Tạo
                            </button>
                            <a asp-area="Admin" asp-controller="Category" asp-action="Index"
                               class="btn btn-outline-secondary px-4 py-2" title="Quay lại danh sách">
                                <i class="fas fa-arrow-left me-1"></i>Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

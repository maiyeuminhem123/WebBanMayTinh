@model WebBanMayTinh.Models.Category

@{
    ViewData["Title"] = "Sửa danh mục";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center mt-5">
    <div class="card shadow" style="min-width: 600px;">
        <!-- Header đen -->
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">
                <i class="fas fa-edit me-2"></i> @ViewData["Title"]
            </h5>
        </div>

        <div class="card-body bg-white">
            <form asp-area="Admin" asp-controller="Category" asp-action="Edit" method="post">
                <input asp-for="CategoryID" type="hidden" />

                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label fw-bold">
                        <i class="fas fa-tag me-1"></i> Tên danh mục
                    </label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label fw-bold">
                        <i class="fas fa-info-circle me-1"></i> Mô tả
                    </label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success me-2">
                        <i class="fas fa-save me-1"></i> Lưu
                    </button>
                    <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-danger text-white">
                        <i class="fas fa-times me-1"></i> Hủy
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

@model WebBanMayTinh.Models.Voucher

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Chi tiết Voucher";
}

<h2>@ViewData["Title"]</h2>

<div class="form-voucher">
    <div class="form-group">
        <label>Mã voucher</label>
        <p class="form-control-static">@Model.Code</p>
    </div>

    <div class="form-group">
        <label>Số tiền giảm (VNĐ)</label>
        <p class="form-control-static">
            @(Model.DiscountAmount.HasValue ? $"{Model.DiscountAmount.Value:C0}" : "Không áp dụng")
        </p>
    </div>

    <div class="form-group">
        <label>Phần trăm giảm (%)</label>
        <p class="form-control-static">
            @(Model.DiscountPercent.HasValue ? $"{Model.DiscountPercent.Value}%" : "Không áp dụng")
        </p>
    </div>

    <div class="form-group">
        <label>Ngày hết hạn</label>
        <p class="form-control-static">@Model.ExpiryDate.ToString("dd/MM/yyyy")</p>
    </div>

    <div class="form-group">
        <label>Trạng thái</label>
        <p class="form-control-static">
            @(Model.IsActive ? "Hoạt động" : "Không hoạt động")
        </p>
    </div>

    <div class="form-group">
        <label>Số lượng</label>
        <p class="form-control-static">
            @(Model.Quantity.HasValue && Model.Quantity.Value > 0 ? Model.Quantity.Value.ToString() : "Không giới hạn")
        </p>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary me-2">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
            <i class="bi bi-pencil"></i> Sửa
        </a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
            <i class="bi bi-trash"></i> Xóa
        </a>
    </div>
</div>

@section Styles {
    <style>
        .form-voucher {
            max-width: 600px;
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 1px 6px rgb(0 0 0 / 0.1);
            margin-top: 1rem;
        }

        .form-group {
            margin-bottom: 1rem;
        }

        label {
            font-weight: 600;
            margin-bottom: 0.3rem;
            display: block;
        }

        .form-control-static {
            padding: 8px 12px;
            background-color: #e9ecef;
            border-radius: 4px;
            min-height: 38px;
            line-height: 1.5;
        }

        .btn {
            min-width: 100px;
        }

        .me-2 {
            margin-right: 0.5rem;
        }

        .mt-3 {
            margin-top: 1rem;
        }
    </style>
}

@model WebBanMayTinh.Models.Voucher

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Chỉnh sửa Voucher";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post" class="form-voucher">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Code"></label>
        <input asp-for="Code" class="form-control" placeholder="Nhập mã voucher" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DiscountAmount"></label>
        <input asp-for="DiscountAmount" class="form-control" placeholder="Nhập số tiền giảm (VNĐ)" />
        <span asp-validation-for="DiscountAmount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DiscountPercent"></label>
        <div class="input-group">
            <input asp-for="DiscountPercent" class="form-control" placeholder="Nhập % giảm" />
            <div class="input-group-append">
                <span class="input-group-text">%</span>
            </div>
        </div>
        <span asp-validation-for="DiscountPercent" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="ExpiryDate"></label>
        <input asp-for="ExpiryDate" type="date" class="form-control" />
        <span asp-validation-for="ExpiryDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsActive"></label>
        <select asp-for="IsActive" class="form-control">
            <option value="true" selected="@Model.IsActive">Hoạt động</option>
            <option value="false" selected="@(Model.IsActive == false)">Không hoạt động</option>
        </select>
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" placeholder="Số lượng (để trống hoặc 0 là không giới hạn)" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MinOrderValue"></label>
        <input asp-for="MinOrderValue" class="form-control" placeholder="Giá trị đơn hàng tối thiểu để áp dụng voucher (tuỳ chọn)" />
        <span asp-validation-for="MinOrderValue" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-warning">Lưu thay đổi</button>
    <a asp-action="Index" class="btn btn-secondary ml-2">Hủy</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    /* Giữ nguyên style từ Create */
    .form-voucher {
        max-width: 600px;
        background: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 1px 6px rgb(0 0 0 / 0.1);
        margin-top: 1rem;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    label {
        font-weight: 600;
        margin-bottom: 0.3rem;
        display: block;
    }

    .btn {
        min-width: 100px;
    }
</style>
